<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnRealtor"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="81dp"
        android:text="@string/cadastrar_corretor"
        android:background="?attr/buttoncolor"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHouse"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="49dp"
        android:text="@string/cadastrar_imovel"
        android:background="?attr/buttoncolor"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/btnRealtor"
        app:layout_constraintStart_toStartOf="@+id/btnRealtor"
        app:layout_constraintTop_toBottomOf="@+id/btnRealtor" />

    <Switch
        android:id="@+id/myswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Night Mode"
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>